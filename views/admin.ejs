<%- include("partials/header", { title: title }) %>

<div class="container mt-5">
  <h2 class="mb-4">User Management</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th><th>Email</th><th>Role</th><th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(u => { %>
        <tr>
          <td><%= u.name %></td>
          <td><%= u.email %></td>
          <td><%= u.role %></td>
          <td>
            <% if (u.role !== "admin") { %>
              <form action="/admin/promote/<%= u._id %>" method="POST" class="d-inline">
                <button class="btn btn-sm btn-success">Promote</button>
              </form>
            <% } else { %>
              <form action="/admin/demote/<%= u._id %>" method="POST" class="d-inline">
                <button class="btn btn-sm btn-warning">Demote</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include("partials/footer") %>
